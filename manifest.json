{
  "name": "FHIR Resource Viewer",
  "short_name": "FHIR Viewer",
  "description": "A lightweight viewer for FHIR R4 Resources and US Core modifications with large font, easy navigation interface",
  "version": "1.0.0",
  "manifest_version": 3,
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#3498db",
  "orientation": "any",
  "scope": "/",
  "lang": "en-US",
  "dir": "ltr",
  "categories": ["healthcare", "medical", "productivity"],
  "icons": [
    {
      "src": "data:image/svg+xml;base64,",
      "sizes": "192x192",
      "type": "image/svg+xml"
    }
  ],
  "shortcuts": [
    {
      "name": "Search Resources",
      "short_name": "Search",
      "description": "Search FHIR resources and profiles",
      "url": "/?action=search",
      "icons": [
        {
          "src": "data:image/svg+xml;base64,",
          "sizes": "96x96",
          "type": "image/svg+xml"
        }
      ]
    }
  ],
  "features": [
    "Cross-platform compatibility",
    "Large font accessibility",
    "Offline functionality",
    "FHIR R4 specification",
    "US Core profiles"
  ]
}